{
    "name": "rafaeldemeirateixeira/phpocr",
    "description": "Leitor OCR para imagem e pdf.",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael Teixeira",
            "email": "rafaeldemeirateixeira@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "thiagoalessio/tesseract_ocr": "dev-master",
        "php-coveralls/php-coveralls": "2.2.x-dev"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^4.0",
        "phpunit/phpunit": "^8.4",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "RasTeixeira\\": "src",
            "RasTeixeiraTests\\": "tests"
        }
    },
    "scripts": {
        "phpunit": "phpunit tests/Unit --coverage-clover build/logs/clover.xml",
        "phpcs": "phpcs --standard=PSR2 -n src tests/Unit",
        "phpcbf": "phpcbf --standard=PSR2 -n src",
        "phpmd": "phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode",
        "app-test": [
            "@phpunit",
            "@phpcs",
            "@phpmd"
        ]
    }
}
